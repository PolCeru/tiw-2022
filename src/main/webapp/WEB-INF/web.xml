<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>TIW-project4</display-name>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/INSERIRE NOME DATABASE</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>INSERIRE NOME</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>INSERIRE PSW</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>LoggedInFilter</filter-name>
        <filter-class>it.polimi.tiw.project4.filters.LoggedInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggedInFilter</filter-name>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/signup</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>NotLoggedInFilter</filter-name>
        <filter-class>it.polimi.tiw.project4.filters.NotLoggedInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NotLoggedInFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/account</url-pattern>
        <url-pattern>/do_transfer</url-pattern>
        <url-pattern>/transfer</url-pattern>
    </filter-mapping>
</web-app>